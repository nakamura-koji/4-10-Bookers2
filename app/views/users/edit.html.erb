<div class="row">

  <% if @user.errors.any? %>
    <%= @user.errors.count %>errors prohibited this obj from being saved:
    <% @user.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
    <% end %>
  <% end %>

  <div class="col-sm-12 col-md-8 col-lg95 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>

      <%= form_with model:@user, local: true do |f| %>
        <div class="form-group">
          <p>Name</p>
            <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <p>Image</p>
            <%= f.attachment_field :profile_image, placeholder: "ファイルを選択" %>
        </div>
        <div class="form-group">
          <p>Introduction</p>
            <%= f.text_area :introduction %>
        </div>
        <div class="form-group">
            <%= f.submit ' Update User ' , class:"btn btn-secondary"%>
        </div>
      <% end %>
  </div>
</div>