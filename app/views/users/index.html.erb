<div class="row">

  <%= render 'books/list', user: @user, book: @book %>

  <div class="col-md-8 offset-md-1">
    <body>
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <!--<th colspan="3"></th>-->
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user|%>
            <tr>
              <td>
                <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to 'Show',user_path(user.id) %></td>
            </tr>
          <%end%>
        </tbody>
      </table>
    </body>
  </div>
</div>