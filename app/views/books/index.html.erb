<body>
  <div class="naos">
    <h2>Books</h2>
    <table>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book|%>
          <tr>
            <td></td>
            <td><%= link_to book.title, book_path(book.id)%></td>
            <td><%= book.body %></td>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div>

  <h2>User info</h2>


  <h2>New book</h2>
  <%= form_with model:@book,local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit'Create book' %>
  <%end%>
</body>